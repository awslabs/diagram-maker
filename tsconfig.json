{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "jsx": "react",
    "jsxFactory": "Preact.h",
    "lib": ["dom", "es5", "es6", "scripthost"],
    "module": "es6",
    "moduleResolution": "node",
    "paths": {
      "*": ["./src/typings/*"],
      "diagramMaker/*": ["./src/*"],
      "react": ["./node_modules/preact/compat"],
      "react-dom": ["./node_modules/preact/compat"]
    },
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true
  },
  "include": [
    "src/**/*",
    "integ/**/*"
  ],
  "exclude": [
    "**/node_modules/**"
  ]
}
